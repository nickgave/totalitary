{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run main.ts with ts-node",
      "runtimeArgs": [
        "--no-warnings",
        "--loader",
        "ts-node/esm"
      ],
      "args": ["main.ts"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/main.ts"
    }
  ]
}